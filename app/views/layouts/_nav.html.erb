<nav class="navbar navbar-expand-lg">
      <div class="container-fluid d-flex justify-content-between">
        <div class="d-flex justify-content-end flex-grow-1">
          <a class="navbar-brand text-white fw-bold" href="#">Fotobook</a>
          <form class="search-bar d-flex w-75" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search Photo / Album"
              aria-label="Search / Album"
            />
          </form>
        </div>
        <% if user_signed_in? %>
          <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center">
              <div class="user-avatar me-2">
                <% if current_user.avatar.present? %>
                  <%= image_tag current_user.avatar, 
                                class: "rounded-circle",
                                style: "width: 30px; height: 30px; object-fit: cover;" %>
                <% else %>
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-primary fw-bold" 
                       style="width: 30px; height: 30px; font-size: 14px;">
                    <%= current_user.first_name&.first&.upcase %><%= current_user.last_name&.first&.upcase %>
                  </div>
                <% end %>
              </div>
              <span class="text-white fw-bold"><%= current_user.first_name %> <%= current_user.last_name %></span>
            </div>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-link text-white fw-bold text-decoration-none p-0 border-0" %>
          </div>
        <% else %>
          <a class="nav-link text-white fw-bold" href="<%= new_user_session_path %>">Login</a>
        <% end %>
      </div>
    </nav>